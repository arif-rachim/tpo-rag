# RAG Document Manager - Environment Configuration Template
# Copy this file to .env and update with your values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=3223

# ============================================================================
# AUTHENTICATION (stdlib-only, no JWT/bcrypt!)
# ============================================================================
# Default admin username
DEFAULT_ADMIN_USERNAME=admin

# SHA-256 hash of admin password
# Default: "admin" -> 8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918
# Generate new hash with: python -c "import hashlib; print(hashlib.sha256(b'your_password').hexdigest())"
DEFAULT_ADMIN_PASSWORD_HASH=8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918

# Session timeout in hours
SESSION_TIMEOUT_HOURS=8

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=50

# Allowed file types (comma-separated, include the dot)
ALLOWED_FILE_TYPES=.pdf,.docx,.pptx,.xlsx,.xls

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins (no spaces!)
# Development example:
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Production example:
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# CHROMADB CONFIGURATION
# ============================================================================
# Directory for ChromaDB persistence
CHROMA_PERSIST_DIR=data/tpo/chroma-store

# Directory for uploaded documents
DOCUMENTS_DIR=data/tpo/documents

# Collection name
COLLECTION_NAME=tpo_documents

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
# Embedding model (sentence-transformers)
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Reranker model
RERANKER_MODEL_NAME=BAAI/bge-reranker-base

# ============================================================================
# SEARCH CONFIGURATION
# ============================================================================
# Number of results to retrieve before reranking
INITIAL_RETRIEVAL_K=20

# Number of final results after reranking
FINAL_RESULTS_K=10

# Minimum similarity score (0-1)
MIN_SIMILARITY_SCORE=0.3

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# Log file rotation size (MB)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ============================================================================
# CHUNKING CONFIGURATION
# ============================================================================
# Chunk size for document splitting (characters)
CHUNK_SIZE=1000

# Chunk overlap (characters)
CHUNK_OVERLAP=200

# ============================================================================
# NOTES
# ============================================================================
# - All paths are relative to project root
# - No spaces in CORS_ORIGINS or ALLOWED_FILE_TYPES
# - Change DEFAULT_ADMIN_PASSWORD_HASH in production!
# - Use HTTPS in production (configure reverse proxy)
